; üåÉ Dark Theme, this is opinionated
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Themes\Personalize]
"AppsUseLightTheme"=dword:00000000
"SystemUsesLightTheme"=dword:00000000

; ‚òÅÔ∏è Mouse hover actions
[HKEY_CURRENT_USER\Control Panel\Mouse]
"MouseHoverTime"="0"

; ‚ìÇÔ∏è Window metrics
; Faster minimize-maximize
[HKEY_CURRENT_USER\Control Panel\Desktop\WindowMetrics]
"MinAnimate"="1"

; üñ•Ô∏è Desktop preferences - contains most settings you'll notice to have an effect
[HKEY_CURRENT_USER\Control Panel\Desktop]
"MenuShowDelay"="100"
"MinAnimate"="1"
"FontSmoothing"="2"
"FontSmoothingType"=dword:00000002

; üñäÔ∏è Custom selections
; ü´ó Disable screensavers - they consume a lot more extra computational resources
[HKEY_CURRENT_USER\Control Panel\Desktop]
"UserPreferencesMask"=hex:9e,1e,07,80,12,00,00,00
"ScreenSaveActive"=dword:00000000
"ScreenSaverIsSecure"=dword:00000000
"ScreenSaveTimeOut"=dword:00000000

; üîç Transparency - Looks better and gives your system a feel of liveliness
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Themes\Personalize]
"EnableTransparency"=dword:00000001

[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Explorer\VisualEffects]
"VisualFXSetting"=dword:00000000
; 0 = Automatic - best choice overall
; 1 = Appearance - good enough, but can be unoptimal
; 2 = Performance - not worth the ancient appearance, provides almost no actual performance boost
; 3 = Custom

[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Explorer\VisualEffects\AnimateMinMax]
